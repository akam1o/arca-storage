# Managed by Ansible

NFS_Core_Param {
  NFS_Protocols = {{ nfs_ganesha_protocols | join(',') }};
  MNT_Port = {{ nfs_ganesha_mountd_port }};
{% if nfs_ganesha_enable_v3 | bool %}
  NLM_Port = {{ nfs_ganesha_nlm_port }};
{% endif %}
}

EXPORT {
  Export_Id = {{ nfs_ganesha_export_id }};
  Path = "{{ nfs_ganesha_export_dir }}";
  Pseudo = "/{{ nfs_ganesha_export_id }}";
  Access_Type = RW;
  Squash = Root_Squash;
  Protocols = {{ nfs_ganesha_protocols | join(',') }};
  Transports = {{ nfs_ganesha_transports | join(',') }};
  Clients = {{ nfs_ganesha_export_clients }};
  FSAL {
    Name = VFS;
  }
}
